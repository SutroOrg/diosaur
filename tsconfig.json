{
    "compilerOptions": {
        "lib": ["dom", "ES2017"],
        "esModuleInterop": true,
        "module": "CommonJS",
        "target": "ES6",
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata": true,
        "strict": true,
        "outDir": "./dist",
        "declaration": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "sourceMap": true
    },
    "exclude": [
        "dist",
        "dist-rsm",
        "node_modules",
        "deno-dist",
        "docs",
        "test",
        "./mod.ts",
        ".github",
        "./jest.config.js"
    ]
}