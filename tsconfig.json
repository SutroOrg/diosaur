{
    "compilerOptions": {
        "lib": ["dom", "ES2015"],
        "esModuleInterop": true,
        "target": "ES6",
        "experimentalDecorators": true,
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata": true,
        "strict": true,
        "outDir": "./dist",
        "declaration": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "noUnusedParameters": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "dist",
        "node_modules",
        "deno-dist",
        "docs",
        "test",
        "./mod.ts",
        ".github",
        "./jest.config.js"
    ]
}