{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "tasks": {
    "dev": "deno run --watch main.ts"
  },
  "lint": {
    "files": {
      "include": ["src"]
    },
    "rules": {
      "include": ["explicit-function-return-type"],
      "exclude": ["no-empty-interface"]
    }
  },
  "fmt": {
    "files": {
      "include": ["src"]
    }
  }
}
